@model IEnumerable<TeamViewModel>
@{
    Layout = null;
    var noItemsModel = new ListNoItemsViewModel("fas fa-sad-tear", "You are not on a team! C'mon, make some friends!");
}

@if (!Model.Any())
{
    <partial name="_ListNoItems" model="noItemsModel" />
}
else
{
    @foreach (var team in Model)
    {
        <div class="col-12">
            <a asp-area="" asp-controller="team" asp-action="details" asp-route-teamId="@team.Id"><span>@team.Name</span></a>
        </div>
    }
}

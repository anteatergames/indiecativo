@model IEnumerable<IndieVisible.Application.ViewModels.Search.UserContentSearchViewModel>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="col-12 p-3 box bg-white">
        <a asp-area="" asp-controller="content" asp-action="details" asp-route-id="@item.ContentId"><h2>@item.Title</h2></a>
        <p style="max-height:50px" class="text-truncate">@item.Content</p>
    </div>
}
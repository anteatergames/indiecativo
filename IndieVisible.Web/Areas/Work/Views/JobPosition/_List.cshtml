@model IEnumerable<JobPositionViewModel>

@{
    Layout = null;
    var noItemsModel = new ListNoItemsViewModel("fas fa-dizzy", "What? We have no job positions here! If you want to hire, add some positions!");
}

@if (!Model.Any())
{
    <partial name="_ListNoItems" model="noItemsModel" />
}
else
{
    @foreach (var team in Model)
    {
        <partial name="_ListItem" model="team" />
    }
}
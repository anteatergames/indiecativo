
@{
    ViewData["Title"] = SharedLocalizer["Work"];
    ViewData["Description"] = SharedLocalizer["Create and apply to job positions."];

    var isAjax = ViewContext.HttpContext.Request.IsAjaxRequest();
    var canInteract = User.Identity.IsAuthenticated;
}

<div id="jobpositioncontainer" class="col-12">
    <input type="hidden" id="isajax" value="@isAjax.ToString().ToLower()" />
    <input type="hidden" id="caninteract" value="@canInteract.ToString().ToLower()" />
    <div class="row">
        <div class="col-lg-8">
            <h1><i class="fa fa-brain" aria-hidden="true">&nbsp;</i>@ViewData["Title"]</h1>
            <span>placeholder</span>
            <div id="divList"></div>
        </div>
        <div id="jobpositionsidebar" class="col-lg-4 no-gutters">
            <div class="col-12">
                @if (canInteract && Model != null)
                {
                    <button class="btn-idea-new btn btn-lg btn-primary d-none d-lg-block btn-block"><i class="far fa-lightbulb" aria-hidden="true">&nbsp;</i>@SharedLocalizer["New Idea"]</button>
                }
            </div>
            <div class="jobposition-box jobposition-sessionlist">
                <h3>@SharedLocalizer["Available Actions"]</h3>
                <div class="row">
                    <div class="col-12">
                        <span>placeholder</span>
                    </div>
                    @if (canInteract)
                    {
                        <div class="col-12">
                            <button class="btn-session-new btn btn-success btn-block"><i class="fa fa-brain" aria-hidden="true">&nbsp;</i>@SharedLocalizer["New Position"]</button>
                        </div>
                    }
                </div>
            </div>
            <div class="jobposition-box">
                <p>Try it!</p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/jobposition.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/jobposition.min.css" asp-append-version="true">
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/jobposition/jobposition.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/jobposition/jobposition.min.js" asp-append-version="true"></script>
    </environment>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
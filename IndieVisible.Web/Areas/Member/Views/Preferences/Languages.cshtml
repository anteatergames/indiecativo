@model IndieVisible.Application.ViewModels.UserPreferences.UserPreferencesViewModel
@{
    ViewData["SubTitle"] = SharedLocalizer["languages"];
    ViewData.AddActivePage(ManageNavPages.Languages);
}

<h4>@ViewData["Title"]</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-12">

        <form id="frmPreferencesSave" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="JobProfile" />
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="UiLanguage"></label>
                    <select asp-for="UiLanguage" asp-items="Html.GetEnumSelectList<SupportedLanguage>()" class="form-control">
                        <option selected="selected" value="">Select</option>
                    </select>
                    <span asp-validation-for="UiLanguage" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="Languages"></label>
                    <select asp-for="Languages" asp-items="Html.GetEnumSelectList<SupportedLanguage>()" class="form-control select2" multiple="" data-placeholder="Select the Languages" style="width: 100%;" tabindex="-1" aria-hidden="true"></select>
                </div>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-info"><i class="fas fa-save" aria-hidden="true">&nbsp;</i>@SharedLocalizer["Save"]</button>
            </div>
        </form>
    </div>
</div>

@section ComponentStyles {
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css">
}

@section Scripts {
    <script src="~/lib/select2/js/select2.full.min.js"></script>

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/userpreferences/userpreferences.js"></script>
}
@model IEnumerable<IndieVisible.Application.ViewModels.Gamification.UserBadgeViewModel>
@{
    Layout = null;
}

@if (!Model.Any())
{
    <span>@SharedLocalizer["No badges yet."]</span>
}
else
{
    foreach (var badge in Model)
    {
        <div class="badge-wrapper">
            <img class="badge-icon" src="~/images/badges/@(badge.Badge.ToString()).png" alt="@(badge.Badge.ToString()) Badge" data-toggle="tooltip" title="@badge.Description" data-placement="bottom" />
            @if (badge.References.Count > 1)
            {
                <span class="counter badge badge-danger">x @badge.References.Count</span>
            }
        </div>
    }
}
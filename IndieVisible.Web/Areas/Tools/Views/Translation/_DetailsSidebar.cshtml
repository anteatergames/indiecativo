@model TranslationProjectViewModel

@{
    Layout = null;
    var canInteract = User.Identity.IsAuthenticated;
}

<div class="col-12 mt-2">
    <div class="alert alert-warning">@SharedLocalizer["xpto"]</div>

<div id="share" class="bg-light p-2 mt-2">
    <h5>@SharedLocalizer["Share it!"]</h5>
    <a asp-protocol="@ViewData["protocol"]" asp-host="@ViewData["host"]" asp-area="work" asp-controller="jobposition" asp-action="details" asp-route-id="@Model.Id" title="Share on Facebook" class="btn btn-social-icon btn-share btn-facebook" data-provider="facebook" data-title="title"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
    <a asp-protocol="@ViewData["protocol"]" asp-host="@ViewData["host"]" asp-area="work" asp-controller="jobposition" asp-action="details" title="Share on Reddit" class="btn btn-social-icon btn-share btn-reddit" data-provider="reddit" data-title="title"><i class="fab fa-reddit-alien" aria-hidden="true"></i></a>
    <a asp-protocol="@ViewData["protocol"]" asp-host="@ViewData["host"]" asp-area="work" asp-controller="jobposition" asp-action="details" title="Tweet this!" class="btn btn-social-icon btn-share btn-twitter" data-provider="twitter" data-text="@SharedLocalizer["Check this job position: {0}", "title"]"><i class="fab fa-twitter" aria-hidden="true"></i></a>
</div>
</div>
@model TranslationProjectViewModel
@{
    var canInteract = User.Identity.IsAuthenticated;
    var noItemsModel = new ListNoItemsViewModel("fas fa-dizzy", "There are no terms to translate yet!");
}

<div id="featurecontainer" class="col-12">
    <div id="containerdetails">
        <div class="row box bg-white no-gutters">
            <div class="col-lg-12">
                <h1 class="sr-only">
                    @SharedLocalizer["translation project details"]
                </h1>
                <input type="hidden" asp-for="Id" />
                <div id="translationcontainer" class="mx-0">
                    <input type="hidden" id="caninteract" value="@canInteract.ToString().ToLower()" />
                    <div data-id="@Model.Id">
                        <div class="box-header with-border">
                            <div class="float-left mr-2">
                                <a asp-area="tools" asp-controller="translation" asp-action="index" class="btn btn-lg btn-default"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                            </div>
                            <div class="float-left">
                                <h2 class="card-title">@ViewData["Title"]</h2>
                            </div>

                            <div class="box-tools">
                                @if (Model.Permissions.CanEdit || Model.Permissions.CanDelete)
                                {
                                    <div class="btn-group">
                                        <button type="button" class="btn  btn-box-tool" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v" aria-hidden="true"></i>
                                        </button>
                                        <div class="dropdown-menu text-capitalize" x-placement="bottom-start" style="position: absolute; transform: translate3d(-67px, 28px, 0px); top: 0px; left: 0px; will-change: transform;">
                                            @if (Model.Permissions.CanEdit)
                                            {
                                                <a class="btnEditTranslationProject dropdown-item" href="#" data-url="@Url.Action("Edit", "Translation", new { area = "Tools", id = Model.Id })">@SharedLocalizer["edit"]</a>
                                            }

                                            @if (Model.Permissions.CanDelete)
                                            {
                                                <a class="btnDeleteTranslationProject dropdown-item" href="#" data-url="@Url.Action("DeleteTranslation", "Translation", new { area = "Tools", id = Model.Id })" data-confirmationmessage="@SharedLocalizer["Are you sure you want to delete this job position?"]" data-confirmationtitle="@SharedLocalizer["Are you sure?"]" data-confirmationbuttontext="@SharedLocalizer["Yes, delete it!"]" data-cancelbuttontext="@SharedLocalizer["Cancel"]">@SharedLocalizer["delete"]</a>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="box-body p-0 px-md-2">
                            <div class="row">
                                <div class="col-lg-8" data-id="@Model.Id">
                                    <partial name="_GameCard" model="Model.Game" />
                                </div>
                                <div class="col-lg-4">
                                    <div class="author-details">
                                        <div class="col-12">
                                            <span>@SharedLocalizer["This translation was requested by"]</span>

                                            <partial name="_AuthorDetails" model="Model" />
                                        </div>
                                    </div>

                                    <div class="border mt-3 mb-3 p-2 bg-light">
                                        <div class="row">
                                            <div class="col-12">
                                                <p class="m-0">@Model.Introduction</p>
                                            </div>
                                        </div>
                                    </div>

                                    <partial name="_ShareContent" model="new ShareModel(Model.ShareUrl, Model.ShareText)" />
                                </div>
                            </div>

                            <div class="mt-2">
                                @if (!Model.Terms.Any())
                                {
                                    <partial name="_ListNoItems" model="noItemsModel" />
                                }
                                else
                                {
                                    <span>@SharedLocalizer["There are {0} terms to be translated.", Model.Terms.Count]</span>
                                    <partial name="_DetailsTranslation" model="Model" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="float-left mt-1 entry-author template">
    <button class="btn btn-sm btn-default mr-1 entry-author-btn" tabindex="-1"><i class="fas fa-fw fa-user" aria-hidden="true"></i></button>
</div>
@model IEnumerable<TranslationProjectViewModel>

@{
    Layout = null;
    var noItemsModel = new ListNoItemsViewModel("fas fa-dizzy", "What? We have no translation projects here! Go ahead, create one!");

    var description = ViewData["ListDescription"] == null ? SharedLocalizer["Translations"] : (string)ViewData["ListDescription"];
}

@if (!Model.Any())
{
    <partial name="_ListNoItems" model="noItemsModel" />
}
else
{
    <p>@SharedLocalizer[description]</p>

    @foreach (var item in Model)
    {
        <partial name="_ListItem" model="item" />
    }
}